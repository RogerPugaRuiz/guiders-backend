{
  "name": "guiders-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=debug nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:check-coverage": "NODE_ENV=test node src/scripts/check-coverage-threshold.js",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json",
    "test:unit": "NODE_ENV=test jest --config ./jest-unit.json --coverage",
  "test:int": "NODE_ENV=test jest --config ./jest-int.json --coverage --passWithNoTests",
    "test:int:dev": "NODE_ENV=test jest --config ./jest-int.json",
    "cli:dev": "NODE_ENV=development ts-node -r tsconfig-paths/register tools/cli.ts",
    "cli:prod": "NODE_ENV=production node dist/tools/cli.js",
    "typeorm:migrate:run": "npm run build && npx typeorm migration:run -d dist/src/data-source.js",
    "typeorm:migrate:generate": "npm run build && npx typeorm migration:generate -d dist/src/data-source.js",
  "typeorm:migrate:generate:js": "tsc src/data-source.ts --module commonjs --outDir dist/tmp && npx typeorm migration:generate src/migrations/create-test-entity -d dist/tmp/data-source.js",
  "keycloak:configure": "node bin/keycloak-configure-client.js"
  },
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.2",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.0.14",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.0.11",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.0.11",
    "@opensearch-project/opensearch": "^3.4.0",
    "axios": "^1.8.2",
    "bcrypt": "^5.1.1",
    "cache-manager": "^6.4.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "commander": "^13.1.0",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "express-session": "^1.18.2",
    "cookie-parser": "^1.4.7",
    "express-session": "^1.18.2",
    "inquirer": "^12.6.1",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "mongoose": "^8.16.1",
    "nodemailer": "^7.0.3",
    "openid-client": "^6.7.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.3",
