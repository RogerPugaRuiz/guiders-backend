{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*(?<!int)(?<!e2e)\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "useESM": false
    }]
  },
  "collectCoverageFrom": [
    "context/**/*.(t|j)s",
    "!context/**/*.spec.ts",
    "!context/**/*.test.ts"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1",
    "^jose$": "<rootDir>/../__mocks__/jose.js"
  },
  "testTimeout": 30000,
  "transformIgnorePatterns": [
    "node_modules/(?!(jose|@nestjs/websockets|socket.io)/)"
  ],
  "extensionsToTreatAsEsm": [".ts"]
}