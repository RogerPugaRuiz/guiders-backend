{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.int-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "context/**/*.(t|j)s",
    "!context/**/*.int-spec.ts",
    "!context/**/*.spec.ts",
    "!context/**/*.test.ts"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1",
    "^jose$": "<rootDir>/../__mocks__/jose.js"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(jose|@nestjs/websockets|socket.io)/)"
  ],
  "testTimeout": 60000
}
